{
  "name": "metropolis",
  "version": "0.0.1",
  "description": "The city that never sleeps.",
  "scripts": {
    "lint": "eslint --quiet '**/*.js'",
    "build": "webpack --config dev/webpack.config.js --mode development",
    "build:production": "webpack --config dev/webpack.config.js --mode production --optimize-minimize --env.analytics=UA-11153361-29",
    "serve": "http-server ./dist/",
    "deploy": "npm run lint && node ./dev/deploy"
  },
  "author": "Oskar Wrobel",
  "dependencies": {},
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.2.0",
    "eslint": "^6.5.1",
    "eslint-config-ckeditor5": "^2.0.0",
    "file-loader": "^4.2.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "husky": "^3.0.8",
    "imports-loader": "^0.8.0",
    "lint-staged": "^9.4.2",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "parallax-js": "^3.1.0",
    "sass-loader": "^8.0.0",
    "webpack": "^4.41.1",
    "webpack-cli": "^3.3.9"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --quiet"
    ]
  },
  "eslintIgnore": [
    "dist/**",
    "src/scripts/analytics.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
